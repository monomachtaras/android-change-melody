<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="co.changemelody.MapsActivity">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text1"
            android:id="@+id/fieldLatitude"
            android:gravity="top"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="fill_horizontal"
        android:text="Large Text2"
        android:id="@+id/fieldLongitude"
        android:gravity="top"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="fill_horizontal"
        android:text="Large Text3"
        android:id="@+id/fieldCity"
        android:gravity="top"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="fill_horizontal"
        android:text="Large Text4"
        android:id="@+id/fieldAddressLine"
        android:gravity="top"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="3"/>




</GridLayout>
